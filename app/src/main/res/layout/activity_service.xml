<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developerhaoz.androidbasis.servicetest.ServiceActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/service_btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onCreate"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="66dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/service_btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onDestroy"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/service_btn_create"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/service_btn_create"
        android:layout_marginLeft="-5dp"/>

    <Button
        android:id="@+id/service_btn_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bind"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="3dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/service_btn_stop"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/service_btn_unbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unbind"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="@+id/service_btn_bind"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/service_btn_bind"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/service_btn_bind"/>
</android.support.constraint.ConstraintLayout>
